            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/setting_item_selector">
                <TextView
                    android:id="@+id/text_update"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:text="@string/self_update" />
                <com.aisiweather.android.ui.SwitchButton
                    android:id="@+id/switch_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    custom:defaultStatus="close"
                    android:paddingRight="16dp"/>
            </LinearLayout>

            <View
                android:background="@color/black4"
                android:layout_width="fill_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/seek_bar_layout"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:background="@drawable/setting_item_selector">
                <com.aisiweather.android.ui.CustomSeekBar
                    android:id="@+id/seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/update_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/update_count"
                android:textSize="12sp"
                android:textColor="#FF9A999B"
                android:background="@drawable/setting_item_selector"/>

